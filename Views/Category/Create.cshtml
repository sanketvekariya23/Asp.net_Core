@model Category

<div><asp-validation-summary ="All" /></div>
<partial name="Notification" />
<div class="card border-0 shadow p-3 ">
	<div class=" card-header bg-secondary bg-gradient text-center">
		<div class="row">
			<div class="col-12">
				Create Category
			</div>
		</div>
	</div>

	<div class="card-body p-4">
		<form method="post">

			<label> Name</label>
			<input  class="form-control" asp-for="Name"/>
			<span asp-validation-for="Name" class="text-danger" style="<br>"></span>

			<label> Add To Cart</label>
			<input  class="form-control" asp-for="AddToCart" />
			<span asp-validation-for="AddToCart" class="text-danger"></span>

			<div class="row">
				<div class=" col-6 col-md-3">
					<button asp-controller="Category" asp-action="Create" class="btn btn-primary mt-2 form-control">Crate</button>
				</div>
				<div class=" col-6 col-md-3">
					<a class="btn btn-primary form-control mt-2" asp-controller="Category" asp-action="Index">Back to List</a>
				</div>
			</div>
		</form>
	</div>
</div>
	