@model List<Category>

<partial name="Notification" />
<div class="card shadow border-0 p-3">
    <div class="card-header bg-secondary bg-gradient text-center">
        <h5 class="mb-0">Category List</h5>
    </div>

    <div class="card-body p-4">
        <div class="row mb-3">
            <div class="col-12 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> Create New Category</a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Add To Cart</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.Id</td>
                        <td>@x.Name</td>
                        <td>@x.AddToCart</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-controller="Category" asp-action="Edit" asp-route-id="@x.Id"> <i class="bi bi-pen"></i> Edit</a>
                            <a class="btn btn-danger btn-sm" asp-controller="Category" asp-action="Delete" asp-route-id="@x.Id"><i class="bi bi-trash3"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
