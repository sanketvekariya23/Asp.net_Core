@model Category
<partial name="Notification" />
<div class="card border-0 shadow p-3 ">
	<div class=" card-header bg-secondary bg-gradient text-center">
		<div class="row">
			<div class="col-12">
				Delete Category
			</div>
		</div>
	</div>

	<div class="card-body p-4">
		<form method="post">

			<label> Name</label>
			<input class="form-control" asp-for="Name" disabled/>
			
			<label> Add To Cart</label>
			<input class="form-control" asp-for="AddToCart" disabled/>
			
			<div class="row">
				<div class=" col-6 col-md-3">
					<button type="submit" asp-controller="Category" asp-action="Delete" class="btn btn-primary mt-2 form-control">Delete</button>
				</div>
				<div class=" col-6 col-md-3">
					<a class="btn btn-primary form-control mt-2" asp-controller="Category" asp-action="Index">Back to List</a>
				</div>
			</div>
		</form>
	</div>
</div>
